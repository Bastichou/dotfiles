set -euo pipefail

echo ""
echo "ðŸ¤š  This script will setup .dotfiles (chezmoi) for you."

OS="{{ .chezmoi.os }}"
ARCH="{{ .chezmoi.arch }}"

echo "[chezmoi] run_once_before_init.sh (${OS}/${ARCH})"

if [[ "$OS" == "darwin" ]]; then

  command -v brew >/dev/null 2>&1 || \
    (echo 'ðŸº  Installing Homebrew' && /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)")

  # Install Oh My Zsh
  if [ ! -f ~/.oh-my-zsh/oh-my-zsh.sh ]; then
    (echo 'ðŸ’°  Installing oh-my-zsh' && yes | sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)")
  fi

else
  # --- Ubuntu 22.04 prereqs ---
  if command -v apt >/dev/null 2>&1; then
    sudo apt-get update -y
    sudo apt-get install -y build-essential procps curl file git ca-certificates zsh
  fi

  # --- Linuxbrew (si activÃ©) ---
  echo "ðŸº Installing Homebrew (Linux)"

  command -v brew >/dev/null 2>&1 || \
  (echo 'ðŸº  Installing Homebrew' && /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)")

  # --- Zsh par dÃ©faut (Linux) ---
  if [[ "$SHELL" != "$(command -v zsh)" ]]; then
    chsh -s "$(command -v zsh)" || true
  fi
fi

# Install chezmoi
command -v chezmoi >/dev/null 2>&1 || \
  (echo 'ðŸ‘Š  Installing chezmoi' && brew install chezmoi)

if [ -d "$HOME/.local/share/chezmoi/.git" ]; then
  echo "ðŸš¸  chezmoi already initialized"
  echo "    Reinitialize with: 'chezmoi init https://github.com/Bastichou/dotfiles.git'"
else
  echo "ðŸš€  Initialize dotfiles with:"
